<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="constructorBean" class="com.spring.source.code.beans.ch2.constructor_arg.ConstructorBean">
        <!--index代表参数顺序，此处代表构造函数中有两个参数信息-->
        <constructor-arg index="0">
            <value>初始值</value>
        </constructor-arg>
        <constructor-arg index="1">
            <value>变更值</value>
        </constructor-arg>
    </bean>
    <bean id="constructorSingleBean" class="com.spring.source.code.beans.ch2.constructor_arg.ConstructorBean">
        <!--index代表参数顺序，此处代表构造函数中有两个参数信息-->
        <constructor-arg index="0">
            <value>单参数构造</value>
        </constructor-arg>

    </bean>

</beans>

